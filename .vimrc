" Redundant
" set nocompatible

" Line numbers
set number
highlight LineNr ctermfg=DarkGrey

" Encoding
set encoding=utf-8

" Word wrap
set wrap
set textwidth=80

" Use 2 spaces instead of Tab
set expandtab
set tabstop=2

" Autoindent
set smartindent
set shiftwidth=2

" Highlight cursor line
set cursorline

 " Searching
set incsearch
set hlsearch

" Confirm saving file before quitting
set confirm

" Better command-line completion (for example :color <Tab>)
set wildmenu

" Always display the status line
set laststatus=2

" Display current command in bottom right corner
set showcmd

" Fast rendering
set ttyfast

" Blink screen on error
set visualbell
